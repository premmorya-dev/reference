<form action="update" method="POST" onsubmit="return confirm('Are you sure to add this transaction')">
<table class="table table-bordered table-hover">
                  <thead>

                    <tr>
                      <td style="width: 1px;" class="text-center">
                        <input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" />
                      </td>

                      <td class="text-left">
                        <a>{{ column_ledger_id }}</a>
                      </td>

                      <td class="text-left">
                        <a>{{ column_transaction_log_id }}</a>
                      </td>

                      <td class="text-left">
                        <a>{{ column_transaction_id }}</a>
                      </td>

                        <td class="text-left">
                        <a>{{ column_payment_processor }}</a>
                      </td>

                      <td class="text-left">
                        <a>{{ column_payment_ref_no }}</a>
                      </td>

                      <td class="text-left">
                        <a>{{ column_method }}</a>
                      </td>

                      <td class="text-left">
                        <a>{{ column_payment_amount }}</a>
                      </td>

                      <td class="text-left">
                        <a>{{ column_payment_date }}</a>
                      </td>

                    
                    
                 

                      {# <td class="text-right">{{ column_action }}</td> #}
                    </tr>
                  </thead>
                  <tbody>
                    {% if unsetteled_transactions %}
                      {% for unsetteled_transaction in unsetteled_transactions %}
                        <tr>
                         <td class="text-center">{% if unsetteled_transaction.ledger_id in selected %}
                      <input type="checkbox" name="selected[]"  class="selected" value="{{ unsetteled_transaction.ledger_id }}" checked="checked" />
                      {% else %}
                      <input type="checkbox" name="selected[]" class="selected" value="{{ unsetteled_transaction.ledger_id }}" />
                      {% endif %}</td>

                          <td class="text-left">{{ unsetteled_transaction.ledger_id }}</td>
                          <td class="text-left">{{ unsetteled_transaction.transaction_log_id }}</td>
                          <td class="text-left">{{ unsetteled_transaction.transaction_id }}</td>
                          <td class="text-left">{{ unsetteled_transaction.processor_type }}</td>
                          <td class="text-left">{{ unsetteled_transaction.ref_no }}</td>
                          <td class="text-left">{{ unsetteled_transaction.method }}</td>
                          <td class="text-left">{{ unsetteled_transaction.amount }}</td>                          
                          <td class="text-left">{{ unsetteled_transaction.transaction_date }}</td>
                         

                          {# <td class="text-right">
                            <a href="{{ all_payment.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                          </td> #}
                        </tr>
                      {% endfor %}
                    {% else %}
                      <tr>
                        <td class="text-center" colspan="8">{{ text_no_results }}</td>
                      </tr>
                    {% endif %}
                  </tbody>
                </table>

</form>
