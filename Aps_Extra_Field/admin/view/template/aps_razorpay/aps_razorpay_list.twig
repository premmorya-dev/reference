</div><!-- /.modal -->


  <script type="text/javascript"><!--
$('#button-filter').on('click', function() {
	var url = '';

	var filter_rp_transaction_id = $('input[name=\'filter_rp_transaction_id\']').val();

	if (filter_rp_transaction_id) {
		url += '&filter_rp_transaction_id=' + encodeURIComponent(filter_rp_transaction_id);
	}

	var filter_oc_id = $('input[name=\'filter_oc_id\']').val();

	if (filter_oc_id) {
		url += '&filter_oc_id=' + encodeURIComponent(filter_oc_id);
	}


	var filter_status = $('select[name=\'filter_status\']').val();

	if (filter_status !== '') {
		url += '&filter_status=' + encodeURIComponent(filter_status);
	}

	location = 'index.php?route=aps_razorpay/aps_razorpay&user_token={{ user_token }}' + url;
});
//--></script> 
  <script type="text/javascript"><!--
// IE and Edge fix!
$('button[form=\'form-product\']').on('click', function(e) {
	$('#form-product').attr('action', $(this).attr('formaction'));
});
  
$('input[name=\'filter_name\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['name'],
						value: item['product_id']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('input[name=\'filter_name\']').val(item['label']);
	}
});

$('input[name=\'filter_model\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_model=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['model'],
						value: item['product_id']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('input[name=\'filter_model\']').val(item['label']);
	}
});


$("#get_transaction").click(function(){  console.log();
  $.ajax({
   	url: 'index.php?route=aps_razorpay/aps_razorpay/getTransaction&user_token={{ user_token }}&transaction_id=' +  encodeURIComponent($('#razarpay_payment_id').val()),
    dataType:'json',
    beforeSend(xhr){
      $('#loader').show();
      $('#razorpay-response').html('');
    },
    success: function(result){
              console.log(result.method);
              $('#razorpay-response').html(result.message);            
              $('#loader').hide();
               if(result.error == '0' ){
                 if(result.method == 'upi'){

                 }
                $('#add_transaction').show();
               }else{
                  $('#add_transaction').hide();
               }
              
              }
  });
});


$("#add_transaction").click(function(e){ 

if(confirm('Are you sure to add this transaction') == true){
 $.ajax({
   	url: 'index.php?route=aps_razorpay/aps_razorpay/addPayment&user_token={{ user_token }}&transaction_id=' +  encodeURIComponent( $('#razarpay_payment_id').val() ),
    data: new FormData(document.querySelector('#form')),
    dataType:'json',
    processData: false,
    contentType: false,
    type:'post',
    beforeSend(xhr){
      $('#loader').show();
      $('#razorpay-response').html('');
    },
    success: function(result){
              $('#razorpay-response').html(result.message);              
               $('#loader').hide();
               $('#get_transaction').show();  
               $('#add_transaction').hide(); 
               if(result.notes){
                $('#razorpay-response').append(result.notes);  
                
               }                  
              }
  });
}

});


