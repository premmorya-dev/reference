
{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-product').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>
      
      <button type="button" data-toggle="modal" data-target="#addtransaction" class="btn btn-primary" ><i class="fa fa-plus"></i>  Add Transaction</button>
       
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="row">
      <div id="filter-product" class="col-sm-12 hidden-sm hidden-xs">
        <div class="panel panel-default">
          <div class="panel-heading adwcsh">
            <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
          </div>
          <div class="panel-body">
            <div class="form-group col-sm-4 adwcs">
              <label class="control-label" for="input-name">{{ column_rp_payment_id }}</label>
              <input type="text" name="filter_rp_transaction_id" value="{{ filter_rp_transaction_id }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
            </div>

              <div class="form-group col-sm-4 adwcs">
              <label class="control-label" for="input-name">{{ column_oc_id }}</label>
              <input type="text" name="filter_oc_id" value="{{ filter_oc_id }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
            </div>
          
            <div class="form-group col-sm-4 adwcs">
              <label class="control-label" for="input-status">{{ column_rp_order_id }}</label>
              <select name="filter_status" id="input-status" class="form-control">
                <option value=""></option>
                
                
                
                  
                

                  {% if filter_status == '1' %}

                
                
                  
                
                
                <option value="1" selected="selected">{{ column_rp_captured }}</option>
                
                
                
                  
                

                  {% else %}

                
                
                  
                
                
                <option value="1">{{ column_rp_captured }}</option>
                
                
                
                  
                

                  {% endif %}
                  {% if filter_status == '0' %}

                
                
                  
                
                
                <option value="0" selected="selected">{{ column_rp_failed }}</option>
                
                
                
                  
                

                  {% else %}

                
                
                  
                
                
                <option value="0">{{ column_rp_failed }}</option>
                
                
                
                  
                

                  {% endif %}


              
              
                
              
              
              </select>
            </div>
            <div class="text-right">
              <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
          </div>
          <div class="panel-body">
            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-product">
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                     
                      <td class="text-left">{% if sort == 'pd.name' %} <a href="{{ sort_name }}" class="{{ order|lower }}">#</a> {% else %} <a href="{{ sort_name }}">#</a> {% endif %}</td>

                      <td class="text-left">{% if sort == 'p.model' %} <a href="{{ sort_model }}" class="{{ order|lower }}">{{ column_rp_payment_id }}</a> {% else %} <a href="{{ sort_model }}">{{ column_rp_payment_id }}</a> {% endif %}</td>

                        <td class="text-left">{% if sort == 'pd.name' %} <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_rp_order_id }}</a> {% else %} <a href="{{ sort_name }}">{{ column_rp_order_id }}</a> {% endif %}</td>

                      <td class="text-left">{% if sort == 'p.model' %} <a href="{{ sort_model }}" class="{{ order|lower }}">{{ column_oc_id }}</a> {% else %} <a href="{{ sort_model }}">{{ column_oc_id }}</a> {% endif %}</td>

                         <td class="text-left">{% if sort == 'p.model' %} <a href="{{ sort_model }}" class="{{ order|lower }}">{{ column_customer_id }}</a> {% else %} <a href="{{ sort_model }}">{{ column_customer_id }}</a> {% endif %}</td>


                        <td class="text-left">{% if sort == 'pd.name' %} <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_amount }}</a> {% else %} <a href="{{ sort_name }}">{{ column_amount }}</a> {% endif %}</td>

                      <td class="text-left">{% if sort == 'p.model' %} <a href="{{ sort_model }}" class="{{ order|lower }}">{{ column_captured }}</a> {% else %} <a href="{{ sort_model }}">{{ column_captured }}</a> {% endif %}</td>

                      <td class="text-left">{% if sort == 'p.price' %} <a href="{{ sort_price }}" class="{{ order|lower }}">{{ column_description }}</a> {% else %} <a href="{{ sort_price }}">{{ column_description }}</a> {% endif %}</td>

                      <td class="text-left">{% if sort == 'p.quantity' %} <a href="{{ sort_quantity }}" class="{{ order|lower }}">{{ column_created }}</a> {% else %} <a href="{{ sort_quantity }}">{{ column_created }}</a> {% endif %}</td>

                     <td class="text-left">{% if sort == 'p.price' %} <a href="{{ sort_price }}" class="{{ order|lower }}">{{ column_entry_type }}</a> {% else %} <a href="{{ sort_price }}">{{ column_entry_type }}</a> {% endif %}</td>

                         <td class="text-left">{% if sort == 'p.price' %} <a href="{{ sort_price }}" class="{{ order|lower }}">{{ column_ledger_id }}</a> {% else %} <a href="{{ sort_price }}">{{ column_ledger_id }}</a> {% endif %}</td>


                     
                      

                    
                      <td class="text-right">{{ column_action }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  
                  {% if all_payments %}
                  {% for all_payment in all_payments %}
                  <tr>
                    <td class="text-center">{% if product.product_id in selected %}
                      <input type="checkbox" name="selected[]" value="{{ product.product_id }}" checked="checked" />
                      {% else %}
                      <input type="checkbox" name="selected[]" value="{{ product.product_id }}" />
                      {% endif %}</td>
                  
                    <td class="text-left">{{ all_payment.transaction_log_id }}</td>
                    <td class="text-left">{{ all_payment.razarpay_payment_id }}</td>
                      <td class="text-left">{{ all_payment.razorpay_order_id }}</td>
                    <td class="text-left">{{ all_payment.oc_order_id }}</td>
                     <td class="text-left">{{ all_payment.customer_id }}</td>
                      <td class="text-left">{{ all_payment.amount }}</td>
                    <td class="text-center"> 
                     {% if all_payment.captured == '1' %}
                    <h5><span class="label label-success">Captured</span></h5>
                     {% else %}
                         <h5><span class="label label-danger">Failed</span></h5>
                       {% endif %}
                    </td>
                      {# <td class="text-left"> {{ all_payment.captured }}</td> #}
                    <td class="text-left">{{ all_payment.description }}</td>
                      <td class="text-left">{{ all_payment.created_at }}</td>
                    <td class="text-left">{{ all_payment.entry_type }}</td>
                    <td class="text-center">{{ all_payment.ledger_id }}</td>
               
                    <td class="text-right"><a href="{{ all_payment.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                  </tr>
                  {% endfor %}
                  {% else %}
                  <tr>
                    <td class="text-center" colspan="8">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
                    </tbody>
                  
                </table>
              </div>
            </form>
            <div class="row">
              <div class="col-sm-6 text-left">{{ pagination }}</div>
              <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<style>
.custom-form{
       line-height: 3.5rem;  
    font-family: sans-serif;
    font-size: 17px;
}
